mixin header
    header.header
        .container
            .header__logo
                +picture({
                    path: `${baseDir}assets/images/header/logo`,
                    ext: `png`,
                })
            .header__socials
                a(href="#").header__social
                    +svg("watsup")
                a(href="#").header__social
                    +svg("telegram")
                a(href="#").header__social
                    +svg("vk")
                a(href="#").header__social
                    +svg("tiktok")
                a(href="#").header__social
                    +svg("youtube")
                a(href="#").header__social
                    +svg("rutube")
            .header__contacts
                .header__contact
                    .header__contact-icon
                        +svg("email")
                    .header__contact-info
                        p E-mail
                        a(href="#") example@gmail.com
                .header__contact
                    .header__contact-icon
                        +svg("telephone")
                    .header__contact-info
                        p Телефон:
                        a(href="#") +7(495) 331 33 67

